generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Employee {
  id Int @id @default(autoincrement())
  first_name String
  last_name String
  password String
  employee_no String
  department  Department @relation(fields: [department_id], references: [id], onDelete: Cascade)
  department_id Int
  cost_code String
  company     Company    @relation(fields: [company_id], references: [id], onDelete: Cascade)
  company_id   Int
  date_hired DateTime
}

model Department {
  id         Int       @id @default(autoincrement())
  name       String
  employees  Employee[]
}

model Company {
  id         Int       @id @default(autoincrement())
  name       String
  employees  Employee[]
}