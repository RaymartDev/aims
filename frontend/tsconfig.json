{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
     // ...
     "baseUrl": ".",
     "paths": {
       "@/*": [
         "./src/*"
       ]
     }
     // ...
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
